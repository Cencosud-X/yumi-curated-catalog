{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "settings": {
          "required": ["screens"],
          "type": "object",
          "description": "Specific configuration",
          "default": { "screens": { "gps": true } },
          "properties": {
            "screens": {
              "type": "object",
              "description": "Screen configuration",
              "additionalProperties": false,
              "required": [],
              "properties": {
                "gps": {
                  "description": "Added Gps feature and enable Geolocalization in devices",
                  "type": "boolean"
                },
                "notification": {
                  "description": "Added notification page and enable push notifications",
                  "type": "boolean"
                },
                "custom_screens": {
                  "type": "integer",
                  "default": 1,
                  "description": "Added a specific blank screens for personalization",
                  "minimum": 1,
                  "maximum": 10
                }
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/projects/type.schema.json"
    }
  ]
}
